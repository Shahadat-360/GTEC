@page "{id:int}"
@model MiniAccountManagementSystem.Web.Pages.ChartOfAccounts.EditModel
@{
    ViewData["Title"] = "Edit Chart of Account";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Edit Account</h2>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Account Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ChartOfAccount.AccountId" />
                        <input type="hidden" asp-for="ChartOfAccount.CreatedDate" />
                        <input type="hidden" asp-for="ChartOfAccount.ParentAccountName" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ChartOfAccount.AccountCode" class="form-label"></label>
                                    <input asp-for="ChartOfAccount.AccountCode" class="form-control" />
                                    <span asp-validation-for="ChartOfAccount.AccountCode" class="text-danger"></span>
                                    <small class="form-text text-muted">Unique code for this account (e.g., 1000, A-1000)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ChartOfAccount.AccountName" class="form-label"></label>
                                    <input asp-for="ChartOfAccount.AccountName" class="form-control" />
                                    <span asp-validation-for="ChartOfAccount.AccountName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ChartOfAccount.AccountType" class="form-label"></label>
                                    <select asp-for="ChartOfAccount.AccountType" asp-items="Model.AccountTypeSelectList" class="form-select">
                                        <option value="">-- Select Account Type --</option>
                                    </select>
                                    <span asp-validation-for="ChartOfAccount.AccountType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ChartOfAccount.ParentAccountId" class="form-label"></label>
                                    <select asp-for="ChartOfAccount.ParentAccountId" asp-items="Model.ParentAccountSelectList" class="form-select">
                                        <option value="0">-- No Parent --</option>
                                    </select>
                                    <span asp-validation-for="ChartOfAccount.ParentAccountId" class="text-danger"></span>
                                    <small class="form-text text-muted">Leave empty for top-level accounts</small>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ChartOfAccount.Description" class="form-label"></label>
                                    <textarea asp-for="ChartOfAccount.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="ChartOfAccount.Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="ChartOfAccount.IsActive" class="form-check-input" />
                                    <label asp-for="ChartOfAccount.IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Created Date</label>
                                    <input value="@Model.ChartOfAccount.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Last Modified</label>
                                    <input value="@(Model.ChartOfAccount.LastModifiedDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")" class="form-control" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-end">
                                    <a asp-page="./Index" class="btn btn-outline-secondary me-2">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}