@page
@model MiniAccountManagementSystem.Web.Pages.ManageUserRole.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create New User</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="UserModel.Email" class="form-label"></label>
                            <input asp-for="UserModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserModel.Password" class="form-label"></label>
                            <input asp-for="UserModel.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserModel.ConfirmPassword" class="form-label"></label>
                            <input asp-for="UserModel.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="UserModel.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserModel.SelectedRoles" class="form-label"></label>
                            <div class="row">
                                @foreach (var role in Model.UserModel.AvailableRoles)
                                {
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="UserModel.SelectedRoles" value="@role.Value" id="role_@role.Value" />
                                            <label class="form-check-label" for="role_@role.Value">
                                                @role.Text
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="UserModel.SelectedRoles" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}